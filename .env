# .env.development - React pour développement local (WAMP)
# Emplacement : racine du projet React
# Utilisé par : npm start

# ==========================================
# ENVIRONNEMENT
# ==========================================
NODE_ENV=development

# ==========================================
# URLs API - Architecture proxy (même domaine)
# ==========================================
REACT_APP_API_BASE_URL=/api
REACT_APP_API_ENDPOINT=/api
REACT_APP_BACKEND_URL=

# ==========================================
# APPLICATION
# ==========================================
REACT_APP_APP_NAME=Centre La Grange - Facturation
REACT_APP_VERSION=7.0.0
REACT_APP_BASE_PATH=

# ==========================================
# DEBUG (activé en dev)
# ==========================================
REACT_APP_DEBUG=true
REACT_APP_DEBUG_URLS=true
REACT_APP_TEST_MODE=true

# ==========================================
# SESSION
# ==========================================
REACT_APP_SESSION_TIMEOUT=1800

# ==========================================
# INDICATEUR ENVIRONNEMENT
# ==========================================
REACT_APP_ENVIRONMENT=development
REACT_APP_ENVIRONMENT_LABEL=DEV LOCAL
REACT_APP_ENVIRONMENT_COLOR=#2196f3
